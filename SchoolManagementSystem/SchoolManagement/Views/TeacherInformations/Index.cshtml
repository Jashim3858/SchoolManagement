@model IEnumerable<SchoolManagement.Models.TeacherInformation>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TeacherName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DOB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeachersCellPhone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Religion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeacherAddress)
            </th>
            <th>
                Image
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Class)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TeacherName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DOB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TeachersCellPhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Religion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TeacherAddress)
            </td>
            <td>
                <img style="height:50px;width:50px;" class="img-thumbnail" src="@item.ImagePath"asp-append-version="true" alt="@item.ImagePath"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Class.ClassName)
            </td>
            <td>
                <button>
                    <a asp-action="Edit" asp-route-id="@item.TeacherID">Edit</a> 
                </button>
                <button>
                    <a asp-action="Details" asp-route-id="@item.TeacherID">Details</a> 
                </button>
                <button>
                    <a asp-action="Delete" asp-route-id="@item.TeacherID">Delete</a>
                </button>
            </td>
        </tr>
}
    </tbody>
</table>
